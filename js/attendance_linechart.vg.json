{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Growing target audience interest over time towards the World Cup",
    "width": 800,
    "height": 400,
    "data": {
        "url": "https://raw.githubusercontent.com/Dylan0209/3179/main/data/worldcups.csv"
    },
    "mark": 
      {
        "type": "line",
        "point":{
          "filled": true,
          "color": "red"
        }
      },
    "encoding": {
      "x": {"field": "Year", "type": "quantitative"},
      "y": {"field": "Attendance", "type": "quantitative"},
      "tooltip": [
        {
          "field": "Year", "type": "quantitative", "title": "Year"
        },
        {
          "field": "Attendance", "type": "quantitative", "title": "Total Attendance"
        }
      ]
    }
  }